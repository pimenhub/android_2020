<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DescriptionActivity"
    android:background="@color/colorPrimary"
    >

    <ImageView
        android:id="@+id/imgDes"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:onClick="onClick"
        />
    <TextView
        android:id="@+id/nombreDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Pelicula"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="25dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btnFrm1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Sinopsis"
            android:textSize="9dp"
            android:onClick="onClick"
            android:background="#FFEB3B"
            android:layout_marginRight="5dp"
            />
        <Button
            android:id="@+id/btnFrm2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Directores y Actores"
            android:textSize="9dp"
            android:onClick="onClick"
            android:background="#FFEB3B"
            android:layout_marginRight="5dp"
            />

        <Button
            android:id="@+id/btnFrm3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Puntuación y Recaudación"
            android:textSize="9dp"
            android:onClick="onClick"
            android:background="#FFEB3B"

            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/contenedorFr"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
    <Button
        android:id="@+id/comprarId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Comprar Boletos"
        android:background="#FFEB3B"
        android:onClick="onClick"
        />
</LinearLayout>