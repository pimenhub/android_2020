<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActualizarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/IngresarIdA"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Ingrese ID"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:inputType="number"
            />
        <Button
            android:id="@+id/btnBuscarA"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:textSize="25dp"
            android:layout_margin="10dp"
            android:background="#FFEB3B"
            android:onClick="onClick"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/txtDato1A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:hint="..."
        />
    <EditText
        android:id="@+id/txtDato2A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:hint="..."
        />
    <EditText
        android:id="@+id/txtDato3A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:hint="..."
        />

    <Button
        android:id="@+id/btnActualizarDato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:layout_margin="10dp"
        android:background="#FFEB3B"
        android:onClick="onClick"
        />

</LinearLayout>