<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Informacion">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/lay_Titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/informacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:gravity="center"
                android:text="Detalles"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay_Titulo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lb_Nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25sp"
                android:text="Medicamento"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/lb_Cantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25sp"
                android:text="Cantidad"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/lb_Precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25sp"
                android:text="Precio"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/lb_Vencimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25sp"
                android:text="Vencimiento"
                android:textColor="#000000"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay_Titulo"
            android:layout_toRightOf="@id/lay_label"
            android:orientation="vertical">

            <TextView
                android:id="@+id/frag_Nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25sp"
                android:text=""
                android:textSize="25sp" />

            <TextView
                android:id="@+id/frag_Cantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25sp"
                android:text=""
                android:textSize="25sp" />

            <TextView
                android:id="@+id/frag_Precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25sp"
                android:text=""
                android:textSize="25sp" />

            <TextView
                android:id="@+id/frag_Vencimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25sp"
                android:text=""
                android:textSize="25sp" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>